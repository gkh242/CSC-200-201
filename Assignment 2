import java.util.Scanner;

public class Assignment2 {
	public static void main(String[] args) {
		double m, x, b, y;
		System.out.println(
				"This program will calcutalte the y value of the point slope formula when given inputs for x, slope, and y-intercept.");
		System.out.println("What is the x value?");
		Scanner keyboard = new Scanner(System.in);
		x = keyboard.nextInt();
		System.out.println("What is the slope?");
		m = keyboard.nextInt();
		System.out.println("What is the value of the y-intercept?");
		b = keyboard.nextInt();
		y = ((m * x) + b);
		System.out.println("The y value is" + " " + y);
	}
}
